<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@idea.picture_url, width: "100%") if @idea.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>名稱: </b><%= @idea.name %></p>
    <p><b>描述: </b><%= @idea.description %></p>
    <p>
      <%= link_to '編輯', edit_idea_path(@idea) %> |
      <%= link_to '刪除', @idea, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to '上一頁', ideas_path %>
    </p>
  </div>
</div>