<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4 idea-item">
        <div class="photo">
          <%= image_tag idea.picture_url, :class => 'img-rounded' ,width: '100%' if idea.picture.present?%>
        </div>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>